  <div class="header_right">
    <div class="header_btn">
      <a href="#">チャット終了</a>
    </div>
  </div>
</div>

<div class="main_center">
  <div class="message">
    <div class="fast_message">
      <div class="message_name">
        Tom
      </div>
      <div class="message_time">
        2020/3/31(Wed) 12:43:30
      </div>
    </div>
    <div class="second_message">
      <div class="message_text">
        おはよう
      </div>
    </div>
  </div>
  <div class="message">
    <div class="fast_message">
      <div class="message_nane">
        Mana
      </div>
